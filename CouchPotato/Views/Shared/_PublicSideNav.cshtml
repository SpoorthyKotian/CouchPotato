@model CouchPotato.Models.HomeView

<nav>
    <ul class="nav">
        <li>
            <a href="#" id="btn-1" data-toggle="collapse" data-target="#submenu1" aria-expanded="false">Genre
                <span class="glyphicon glyphicon-chevron-down pull-right" style="margin-top:2px" aria-hidden="true"></span></a>
            <ul class="nav collapse" id="submenu1" role="menu" aria-labelledby="btn-1">
                @foreach (var gen in Model.Genre)
                {
                    <li><a href="#">@gen.Genre</a></li>
                }
            </ul>
        </li>
        <li>
            <a href="#" id="btn-2" data-toggle="collapse" data-target="#submenu2" aria-expanded="false">Language
                <span class="glyphicon glyphicon-chevron-down pull-right" style="margin-top:2px" aria-hidden="true"></span></a>
            <ul class="nav collapse" id="submenu2" role="menu" aria-labelledby="btn-2">
                @foreach (var lang in Model.Languages)
                {
                    <li><a href="#">@lang.Language</a></li>
                }
            </ul>
        </li>
        <li>@Html.ActionLink("Actors", "Actors", "Home")</li>
        <li><a href="#">Top Rated</a></li>
        <li><a href="#">New Releases</a></li>
    </ul>
</nav>

