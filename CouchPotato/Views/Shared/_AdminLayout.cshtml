<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Couch Potato Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Couch Potato", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Admin", "Login", "Session")</li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Logout", "Logout", "Session")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="row">
            <div class="col-md-2">
                <br>
                <ul class="nav nav-pills nav-stacked">
                    <li>@Html.ActionLink("Hard Drives", "Index", "HardDrives")</li>
                    <li>@Html.ActionLink("Types", "Index", "Types")</li>
                    <li>@Html.ActionLink("Languages", "Index", "Languages")</li>
                    <li>@Html.ActionLink("Movies List", "Index", "MoviesList")</li>
                </ul>

            </div>
            <div class="col-md-10">
                @RenderBody()

            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Couch Potato Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
